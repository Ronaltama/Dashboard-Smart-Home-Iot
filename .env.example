# Server Configuration
VITE_PORT=5173
VITE_NODE_ENV=production

# MQTT Configuration
VITE_MQTT_HOST=broker.mqtt-dashboard.com
VITE_MQTT_PORT=1883
VITE_MQTT_WS_PORT=8000
VITE_MQTT_USER=your-username
VITE_MQTT_PASSWORD=your-password

# Node-RED Configuration
VITE_NODE_RED_URL=https://node-red.local:1880
VITE_NODE_RED_AUTH_TOKEN=replace_me

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-firebase.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# Snapshot Storage
VITE_SNAPSHOT_LOCAL_PATH=/data/snapshots
VITE_THUMBNAIL_PATH=/data/thumbs
VITE_MAX_LOCAL_RETENTION_DAYS=30

# Default Settings
VITE_GAS_THRESHOLD_DEFAULT=400
